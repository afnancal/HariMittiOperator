<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_background"
    android:clickable="true"
    android:gravity="center_vertical"
    android:padding="8dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/iv_row_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        app:srcCompat="@drawable/ic_dummyicon" />

    <TextView
        android:id="@+id/tv_row_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/iv_row_icon"
        android:layout_toRightOf="@+id/iv_row_icon"
        android:paddingLeft="30dp"
        android:text="Dashboard"
        android:textColor="@color/colorTextForgot"
        android:textSize="15dp" />

</RelativeLayout>
